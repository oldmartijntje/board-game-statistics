<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../components/technical/head') %>
</head>

<body>
    <style>
        .import-section {
            max-width: 500px;
            text-align: left;
            position: relative;
        }

        .import-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1rem;
        }

        .import-header h2 {
            margin: 0;
            color: var(--secondary);
            font-size: 1.25rem;
        }

        .info-button {
            font-size: 1.2rem;
            color: var(--text-muted);
            transition: color 0.2s;
        }

        .info-button:hover {
            color: var(--secondary);
        }

        .import-text {
            margin-bottom: 1rem;
            line-height: 1.5;
            color: var(--text-light);
        }

        .file-input {
            display: none;
        }

        .btn-upload,
        .btn-send {
            display: inline-block;
            cursor: pointer;
            margin-top: 0.5rem;
        }

        #selected-file-name {
            font-style: italic;
            color: var(--text-light);
            margin-top: 0.5rem;
        }

        .butn {
            border-radius: 0.375rem;
            color: var(--text-light);
        }

        .butn:disabled {
            color: var(--text-muted);

            background-color: var(--secondary);
        }
    </style>
    <%- include('../../components/default/header') %>

        <div class="main-container">
            <div class="container-fluid">
                <div class="row">

                    <%- include('../../components/default/loggedInSidebar') %>

                        <div class="col-lg-9">
                            <div class="site-card info-card">
                                <div class="logo">
                                    <div class="brand-name">Data Center</div>
                                </div>

                                <div class="site-card import-section centerDiv">
                                    <div class="import-header">
                                        <h2>Import Boardgame Stats</h2>
                                        <a target="_blank" href="https://github.com/oldmartijntje/board-game-statistics"
                                            class="info-button" aria-label="More info about importing/exporting">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </div>
                                    <p class="import-text">
                                        Import your boardgame stats export here. This can be a single play or all the
                                        data at once.
                                        You are looking for either a <code>.json</code> file or a <code>.bgsplay</code>
                                        file.
                                    </p>
                                    <input type="file" id="bgs-import" class="form-control file-input"
                                        accept=".json, .bgsplay" />
                                    <label for="bgs-import" class="btn-primary btn-upload">Choose fileâ€¦</label>
                                    <p id="selected-file-name">No file selected</p>
                                    <button id="upload-btn" class="butn btn-primary btn-send" disabled>Upload</button>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>

        <script src="/helperMethods.js"></script>
        <script>
            const fileInput = document.getElementById('bgs-import');
            const selectedFileName = document.getElementById('selected-file-name');
            const uploadBtn = document.getElementById('upload-btn');

            let selectedFile = null;

            fileInput.addEventListener('change', () => {
                selectedFile = fileInput.files[0];
                if (selectedFile) {
                    selectedFileName.textContent = `Selected file: ${selectedFile.name}`;
                    uploadBtn.disabled = false;
                } else {
                    selectedFileName.textContent = 'No file selected';
                    uploadBtn.disabled = true;
                }
            });

            uploadBtn.addEventListener('click', async () => {
                if (!selectedFile) return;

                const reader = new FileReader();
                reader.onload = async () => {
                    try {
                        const text = reader.result;
                        const payload = { body: JSON.parse(text) };

                        const resp = await fetch('/api/data_center/', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(payload)
                        });

                        if (!resp.ok) throw new Error(`Server error ${resp.status}`);
                        const result = await resp.json();
                        console.log('Import parsed and sent:', result);
                        alert('File uploaded successfully!');
                    } catch (err) {
                        console.error('Failed to read/parse/send:', err);
                        alert('Error uploading file. Check console for details.');
                    }
                };
                reader.onerror = () => {
                    console.error('FileReader error', reader.error);
                    alert('File reading failed.');
                };
                reader.readAsText(selectedFile);
            });
        </script>



        <%- include('../../components/technical/bootstrapAndTracking') %>
</body>

</html>